<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorIce"
    tools:ignore="RtlHardcoded">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:behavior_overlapTop="38dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:contentPaddingLeft="16dp"
                    app:contentPaddingRight="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/photoPlace"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="2dp"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/photo"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/duo_shape_rectangled_rounded_color_accent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:minWidth="@android:dimen/thumbnail_width"
                                android:padding="8dp"
                                android:layout_marginLeft="40dp"
                                android:layout_gravity="top|right"
                                android:src="@drawable/ic_camera_white_24dp"/>

                        </FrameLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <ImageView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/duo_shape_rectangled_rounded_color_accent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:minWidth="@android:dimen/thumbnail_width"
                                android:padding="8dp"
                                android:src="@drawable/ic_add_location_white_24dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <ImageView
                                android:id="@+id/contact"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/duo_shape_rectangled_rounded_color_accent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:minWidth="@android:dimen/thumbnail_width"
                                android:padding="8dp"
                                android:src="@drawable/ic_email_white_24dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <ImageView
                                android:id="@+id/midia"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/duo_shape_rectangled_rounded_color_accent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:minWidth="@android:dimen/thumbnail_width"
                                android:padding="8dp"
                                android:src="@drawable/ic_device_hub_black_24dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />


                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/tv_name_local"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_input"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorIce"
                            android:hint="@string/hint_name_local"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/tv_cnpj"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/cnpj"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_input"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorIce"
                            android:hint="@string/hint_cnpj"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/tv_payment"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/payment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_textarea"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorIce"
                            android:gravity="top"
                            android:hint="@string/hint_payment"
                            android:imeOptions="actionNext"
                            android:inputType="text|textMultiLine"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/tv_about"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/abut"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_textarea"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorIce"
                            android:gravity="top"
                            android:hint="@string/hint_about"
                            android:imeOptions="actionDone"
                            android:inputType="text|textMultiLine"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp" />


                        <Button
                            android:id="@+id/save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/duo_shape_rectangled_rounded_color_accent"
                            android:gravity="center"
                            android:minWidth="@android:dimen/thumbnail_width"
                            android:padding="8dp"
                            android:text="@string/bt_save"
                            android:textAllCaps="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="25sp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Vs. 1.0"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_progress"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|top"
                android:background="@color/colorIce"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="30dp"
                        android:text="por favor aguarde"
                        android:textColor="@color/colorBlack" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>