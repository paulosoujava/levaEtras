

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:behavior_overlapTop="78dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:contentPaddingLeft="16dp"
                    app:contentPaddingRight="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Nome do Loca"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="digite o nome"
                            android:nextFocusDown="@id/city"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Endereço "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="qual endereço"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Bairro "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/neibohood"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="qual bairro"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:lineSpacingExtra="8dp"
                                    android:text="Estado "
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/state"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="#eee"
                                    android:hint="SC? RJ?"
                                    android:nextFocusDown="@id/save"
                                    android:maxLines="1"
                                    android:maxLength="2"
                                    android:paddingLeft="10dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:lineSpacingExtra="8dp"
                                    android:text="Num. "
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/num"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="#eee"
                                    android:hint="num."
                                    android:nextFocusDown="@id/save"
                                    android:maxLines="1"
                                    android:maxLength="2"
                                    android:paddingLeft="10dp" />

                            </LinearLayout>

                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Email "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="email"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Telefone "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="qual telefone"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Url Facebook "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/insta"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="url facebook"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Instagram "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/inst"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="qual url instagram"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Youtube "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/you"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="qual url youtube"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Site "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/site"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:background="#eee"
                            android:hint="qual url do Site"
                            android:nextFocusDown="@id/state"
                            android:maxLines="1"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Formas de Pagamentos "
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorIce"
                            android:gravity="top"
                            android:hint="Quais formas de pagamentos aceitas"
                            android:inputType="text|textMultiLine"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:lineSpacingExtra="8dp"
                            android:text="Fale sobre a casa"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/livre"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorIce"
                            android:gravity="top"
                            android:hint="Descrição da casa"
                            android:inputType="text|textMultiLine"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">


                            <Button
                                android:id="@+id/exit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"

                                android:text="Deslogar"
                                />

                            <Button
                                android:id="@+id/save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"

                                android:text="Salvar"
                                />

                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="25sp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="Vs. 1.0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_progress"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|top"
                android:background="@color/colorIce"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="30dp"
                        android:text="por favor aguarde"
                        android:textColor="@color/colorBlack" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>


